{
  "name": "create-release-draft",
  "version": "1.0.0",
  "private": true,
  "description": "Action to prepare a change log from pull requests create a release draft.",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --print-width 120 --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map",
    "test": "jest",
    "all": "npm run format && npm run build && npm run lint && npm run package"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/actions/typescript-action.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "Harikrishnan Balagopal",
  "license": "Apache-2.0",
  "dependencies": {
    "@actions/core": "^1.2.6",
    "@actions/github": "^4.0.0",
    "@octokit/rest": "^18.1.0",
    "semver": "^7.3.4"
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/node": "^15.12.1",
    "@types/semver": "^7.3.4",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "@vercel/ncc": "^0.25.1",
    "eslint": "^7.20.0",
    "eslint-plugin-github": "^4.1.1",
    "eslint-plugin-jest": "^24.1.3",
    "jest": "^26.6.3",
    "jest-circus": "^26.6.3",
    "js-yaml": "^4.0.0",
    "prettier": "2.2.1",
    "ts-jest": "^26.5.1",
    "typescript": "^4.1.3"
  }
}
